<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="/img/favicon.ico" rel="icon" type="image/x-icon" />
    <title>Pokedex</title>
</head>
<header class='header'>
    <nav>
        <img src="/img/pokedex.png" class="pok" alt="Pokédex Logo">
        <ul>
            <img src="/img/hi.gif" id="hi" alt="Pokédex Logo">
            <li>
                <a href="cadastro">Cadastro</a>
            </li>
            <li>
                <a href="detalhes">Detalhes</a>
            </li>
        </ul>
    </nav>
    
</header>

<body>
    <% if(text != "") {  %>
        <section id="text">
            <p><%= text %></p> 
            <span id="close">&times;</span>
        </section>
    <% }  %>
    <main class="body">
        <% pokedex.forEach((pokedex, find) => { %>
            <section class="pac1">
                <div class="pac2">
                    <a href="/detalhes/<%= find %>"><img class="img" src="<%= pokedex.foto %>"></a>
                    <p class="num"> <%= pokedex.num %></p>
                    <p class="nome"> <%= pokedex.nome %></p>
                    <p class="tipo"> <%= pokedex.tipo %></p>
                </div>
            </section>
        <% }) %>
    </main>
    <script src="/js/script.js"></script>

</body>
</html>